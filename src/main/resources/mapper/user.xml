    <select id="yulanxml" resultMap="jianliAll">
		select *
        from resume A,jobintension B, experience C,undergo D
        where A.jlId = 29 and B.jlid = 29 and C.jlId = 29 and D.jlId = 29;
	</select>

</mapper>